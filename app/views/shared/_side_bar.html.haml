.side_bar
  .side_bar__top
    .side_bar__top__box
      %p.side_bar__top__box--name
        = current_user.name
      %ul.side_bar__top__box__menu
        %li.side_bar__top__box__menu--new_btn
          = link_to new_group_path do
            = icon('fa', 'edit')
        %li.side_bar__top__box__menu--edit_btn
          = link_to edit_user_path(current_user) do
            = icon('fa', 'cog')
  .side_bar__bottom
    - current_user.groups.each do |group|
      .side_bar__bottom__groups
        = link_to '#' do
          .side_bar__bottom__groups--name
            = group.name
          .side_bar__bottom__groups--message
            メッセージはまだありません。
